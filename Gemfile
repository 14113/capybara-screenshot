source 'https://rubygems.org'

gem 'rake'

# whilst dependencies should be defined in Gemspec, to build this gem the version needs to be enforced
gem 'nokogiri', '< 1.6' # force older version of Nokogiri that works with Ruby 1.8
gem 'capybara', '< 2' # force older version of Capybara that works with Ruby 1.8

